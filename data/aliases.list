# Bash Aliases

# fancy listing
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# ensure remove confirmations
alias rm='rm -i'

# human readable df
alias df='df -h'

# ignore common typos
alias naon='nano'

# daily update script
alias update="sudo apt update; sudo apt -y upgrade; sudo apt autoremove -y"
